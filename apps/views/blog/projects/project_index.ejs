<section id="project" class="pb-5">
    <div class="container">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase">project</h2>
            <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>
        <div class="row">
            <!-- Team member -->

            <%if(data && data[1]){%>
                <% data[1].forEach(project=>{%>
                    <div class="col-xs-12 col-sm-6 col-md-4">
                        <div class="image-flip" ontouchstart="this.classList.toggle('hover');">
                            <div class="mainflip">
                                <div class="frontside">
                                    <div class="card">
                                        <div class="card-body text-center">
                                            <p>
                                                <img class=" img-fluid" src="<%= project.link_images%>" alt="card image">
                                            </p>
                                            <h4 class="card-title">
                                                <%= project.title%>
                                            </h4>
                                            <p class="card-text">
                                                <%= project.intro%>
                                            </p>

                                        </div>
                                    </div>
                                </div>
                                <div class="backside">
                                    <div class="card">
                                        <div class="card-body text-center mt-4">
                                            <h4 class="card-title">
                                                <%= project.title%>
                                            </h4>
                                            <p class="card-text">
                                                <%= project.description%>
                                            </p>
                                            <a href="<%= project.link_project%>" class="btn btn-secondary">
                                                <i class="fa fa-angle-double-right"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <%})%>
                        <%}%>





        </div>
    </div>
</section>