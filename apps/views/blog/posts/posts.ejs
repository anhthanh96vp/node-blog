<!-- About -->
<section id="posts">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">posts</h2>
        <h3 class="section-subheading text-muted">Chào mừng các bạn đã ghé thăm blog của tôi</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="container-fluid p-0">
          <% if(data && data.err) {%>
            <div class="posts"></div>
            <h3 style="color: red; text-align: center">
              <%= data.err%>
            </h3>
        </div>
        <%}
          %>
          <% if(data && data.posts){%>
            <% for(let i = 0; i< data.posts.length; i++ ){%>
              <div class="posts">
                <div class="posts__avatar">
                  <a href="">
                    <img src="/static/imgs/avatar.jpg" alt="">
                  </a>
                </div>
                <div class="posts__detail">
                  <div class="posts__detail__title">
                    <div>
                      <h3>
                        <a href="/blog/post/<%= data.posts[i].id %>">
                          <%= data.posts[i].title%>
                        </a>
                      </h3>
                    </div>
                    <div>
                      <ul>
                        <li>
                          <a href="">
                            <i class="fa fa-eye"></i>
                          </a>
                          <p> 1000</p>
                        </li>
                        <li>
                          <a href="">
                            <i class="fa fa-thumbs-up"></i>
                          </a>
                          <p> 1000</p>
                        </li>
                      </ul>
                    </div>
                  </div>
                  <div class="posts__detail__tag">
                    <ul>
                      <li>
                        <a href="">javascript</a>
                      </li>
                      <li>
                        <a href="">html</a>
                      </li>
                      <li>
                        <a href="">css</a>
                      </li>
                      <li>
                        <a href="">bootstrap</a>
                      </li>
                      <li>
                        <a href="">vuejs</a>
                      </li>
                    </ul>
                  </div>
                  <div class="posts__detail__content">
                    <p>
                      <%- data.posts[i].content%>
                    </p>
                  </div>
                  <div class="posts__detail__time">
                    <p>
                      <%= data.posts[i].author%> viết
                        <%= data.posts[i].created_at%>
                    </p>
                  </div>
                </div>
              </div>
              <%}%>
                <%}%>
      </div>
    </div>
  </div>
  </div>
</section>