<section id="posts">
  <div class="container-fuild">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">posts</h2>
        <h3 class="section-subheading text-muted">Một số bài viết yêu thích được cập nhật</h3>
      </div>
    </div>
    <div class="row ">
      <% if(data && data[2]){%>
        <% data[2].forEach(post=>{%>
          <input type="hidden" name="id" tabindex="1" class="form-control id" placeholder="Id" value="<%= post.id%>">
          <input type="hidden" name="like_post" tabindex="1" class="form-control id" placeholder="Id" value="<%= post.like_post%>">
          <div class="col-xs-12 col-md-6">
            <div class="posts">
              <div class="posts__avatar">
                <a href="">
                  <img src="<% if(post.avatar){%>
                    <%= post.avatar%>
                    <%}else{%>
                      /static/imgs/avatar.png
                      <%}%>" alt="">
                </a>
              </div>
              <div class="posts__detail">
                <div class="posts__detail__title">
                  <div>
                    <h5>
                      <a href="/blog/post/<%= post.id %>">
                        <%= post.title%>
                      </a>
                    </h5>
                  </div>
                  <div>
                    <ul>
                      <li>
                        <a href="">
                          <i class="fa fa-eye"></i>
                        </a>
                        <p>
                          <%= post.view_post%>
                        </p>
                      </li>

                    </ul>
                  </div>
                </div>
                <div class="posts__detail__content">
                  <div class="post_limit">
                    <%- post.content%>
                  </div>
                  </p>
                </div>
                <div class="posts__detail__time">
                  <p>
                    <%= post.author%>
                  </p> Được viết ngày
                  <%= post.updated_at%>
                    </p>
                    </p>
                </div>
              </div>
            </div>
          </div>
          <%})%>
            <%}%>

    </div>
  </div>
</section>