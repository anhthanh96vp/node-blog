<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Edit User</title>
    <%- include ../layout/head%>
</head>

<body>
    <div class="container-fuild">
        <div>
            <%- include ../layout/nav%>
        </div>

        <div class="content-wrapper">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="panel panel-login">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-6">
                                    <h3>Edit user</h3>
                                </div>
                                <div>
                                    <div>
                                        <div>
                                            <%if(err){%>
                                                <div id="login-alert" class="alert alert-danger col-sm-12">
                                                    <%= err%>
                                                </div>
                                                <%}%>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <form action="" method="" role="form">
                                        <div>
                                            <input id="id" type="hidden" name="id" tabindex="1" class="form-control id" placeholder="Id" value="<% if(user && user.id) {%> <%= user.id%> <%} %>">
                                        </div>
                                        <div class="form-group">
                                            <h5 style="color: grey" class="text-center" id="email" name="email" tabindex="1"><% if(user && user.email) {%> <%= user.email%> <%} %><h5>
                                        </div>
                                        <div class="form-group">
                                            <input id="password" type="text" name="password" tabindex="1" class="form-control title" placeholder="Tiêu đề" value="<% if(user && user.password) {%> <%= user.password%> <%} %>">
                                        </div>
                                        <div class="form-group">
                                            <textarea id="first_name" type="text" name="first_name" tabindex="1" class="form-control first_name" placeholder="Class icon"><% if(user && user.first_name) {%> <%= user.first_name%> <%} %></textarea>
                                        </div>
                                        <div class="form-group">
                                            <textarea id="last_name" type="text" name="last_name" tabindex="1" class="form-control last_name" placeholder="Class icon"><% if(user && user.last_name) {%> <%= user.last_name%> <%} %></textarea>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-sm-6 col-sm-offset-3">
                                                    <input type="button" tabindex="4" class="form-control btn btn-success user_edit" value="Edit user">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include ../layout/footer%>
        <%- include ../layout/bottom%>
            <script src="/static/js/user.js"></script>
</body>

</html>