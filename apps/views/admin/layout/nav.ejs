<style>
    .login__account {
        position: relative;
    }

    .account__avatar {
        width: 40px;
        height: 40px;
        overflow: hidden;
        border-radius: 50%;
        -webkit-border-radius: 50%;
        -moz-border-radius: 50%;
        -ms-border-radius: 50%;
        -o-border-radius: 50%;
        cursor: pointer;
    }

    .account__avatar img {
        width: 100%;
    }

    .account__info {
        opacity: 0;
        visibility: hidden;
        max-width: 200px;
        height: 100px;
        position: absolute;
        background: #fff;
        border-radius: 4px;
        z-index: 99;
        -webkit-box-shadow: 0 50px 100px rgba(50, 50, 93, .1), 0 15px 35px rgba(50, 50, 93, .15), 0 5px 15px rgba(0, 0, 0, .1);
        box-shadow: 0 50px 100px rgba(50, 50, 93, .1), 0 15px 35px rgba(50, 50, 93, .15), 0 5px 15px rgba(0, 0, 0, .1);
        -webkit-transform-origin: 50% 0;
        transform-origin: 50% 0;
        display: grid;
        -webkit-box-align: center;
        -ms-flex-align: center;
        align-items: center;
        gap: 20px;
        /*align-items: center;
        */
        padding: 12px;
        right: 0;
        top: 125%;
        -webkit-transition: all 0.4s, opacity 0.4s, -webkit-transform 0.3s;
        transition: all 0.4s, opacity 0.4s, -webkit-transform 0.3s;
        transition: all 0.4s, opacity 0.4s, transform 0.3s;
        transition: all 0.4s, opacity 0.4s, transform 0.3s, -webkit-transform 0.3s;
        -webkit-transition: all 0.4s, opacity 0.4s, transform 0.3s;
        -moz-transition: all 0.4s, opacity 0.4s, transform 0.3s;
        -ms-transition: all 0.4s, opacity 0.4s, transform 0.3s;
        -o-transition: all 0.4s, opacity 0.4s, transform 0.3s;
    }

    .arrow {
        position: absolute;
        width: 20px;
        height: 20px;
        display: block;
        background: white;
        -webkit-transform: translateY(-50%) rotate(45deg);
        transform: translateY(-50%) rotate(45deg);
        top: 4px;
        right: 5%;
    }

    .info__user {
        width: 150px;
    }

    .info__user a,
    .info__logout {
        color: #000;
        text-decoration: none;
        cursor: pointer;
        transition: 0.15s;
        -webkit-transition: 0.15s;
        -moz-transition: 0.15s;
        -ms-transition: 0.15s;
        -o-transition: 0.15s;
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
    }

    .info__user p,
    .info__logout p {
        padding-left: 6px;
    }

    .info__user a:hover,
    .info__logout:hover {
        color: #FF9A00
    }

    .login__account:hover .account__info {
        opacity: 1;
        visibility: visible;
    }
</style>


