<div class="col-lg-12" style="padding-top: 20px;">
    <div class="panel panel-default">
        <div class="panel-heading">
            Posts
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Author</th>
                            <th>Create Time</th>
                            <th>Update Time</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(data && data.posts){%>
                            <% for(let i=0;i<data.posts.length;i++) 
                                {%>
                                <tr>
                                    <td>
                                        <%= data.posts[i].id%>
                                    </td>
                                    <td>
                                        <%= data.posts[i].title%>
                                    </td>
                                    <td>
                                        <%= data.posts[i].content%>
                                    </td>
                                    <td>
                                        <%= data.posts[i].author%>
                                    </td>
                                    <td>
                                        <%= data.posts[i].created_at%>
                                    </td>
                                    <td>
                                        <%= data.posts[i].updated_at%>
                                    </td>
                                    <td style="display: flex; justify-content: space-between">
                                        <a href="/admin/post/edit/<%= data.posts[i].id%>"  class="btn btn-info">Edit</a>
                                        <button post_id="<%= data.posts[i].id%>" class="btn btn-danger post_delete">Delete</button>

                                    </td>
                                </tr>
                                <%}
                                %>
                                    <%}
                        %>
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
