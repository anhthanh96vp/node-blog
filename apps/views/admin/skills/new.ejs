<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
      <%- include ../layout/head%>
    <title>Edit Skill</title>

</head>

<body>
    <div class="container-fuild">
        <div>
            <%- include ../layout/nav%>
        </div>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-6">
                                <h3>New skill</h3>
                            </div>
                            <div>
                                <div>
                                    <div>
                                        <%if(err){%>
                                            <div id="login-alert" class="alert alert-danger col-sm-12">
                                                <%= err%>
                                            </div>
                                            <%}%>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <form action="" method="post" role="form">
                                    <div class="form-group">
                                        <input type="text" name="title" tabindex="1" class="form-control" placeholder="Tiêu đề">
                                    </div>
                                    <div class="form-group">
                                        <textarea type="text" name="html_icon" tabindex="1" class="form-control" placeholder="Class icon"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <input type="submit" tabindex="4" class="form-control btn btn-success" value="New icon skill">
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <%- include ../layout/footer%>
        <%- include ../layout/bottom%>
        

</body>

</html>